_ccmock()
{
    local cur prev opts
    
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="--config=
          --help
          --compile-commands=
          --force
          --verbose
          --print-main
          --print-time
          --mock-type
          --quiet
          --clang-resource-dir
          --color
          -o"

    case "${cur}" in 
        -*)
            COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
            ;;
        *)
            
    esac
    
    return 0
}

complete -o default -F _ccmock ccmock
